# CORS nur für API – blockiert nichts
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# MultiViews ausschalten (verhindert seltsame Content-Negotiation-404s)
<IfModule mod_negotiation.c>
  Options -MultiViews
</IfModule>

# Wenn später RewriteRules genutzt werden: echte Dateien/Ordner niemals umschreiben
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  # (hier könnten danach API-Rewrites kommen)
</IfModule>

# Statische Bilder explizit zulassen
<FilesMatch "\.(png|jpe?g|gif|svg|webp)$">
  Require all granted
</FilesMatch>